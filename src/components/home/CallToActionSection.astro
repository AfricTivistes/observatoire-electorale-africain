---
import { FaUsers, FaChartBar, FaGlobeAfrica, FaFileAlt } from "react-icons/fa";

const actions = [
  {
    icon: FaUsers,
    title: "Devenir Observateur",
    description: "Rejoignez notre réseau d'observateurs électoraux"
  },
  {
    icon: FaChartBar,
    title: "Partager des Données",
    description: "Contribuez avec vos données et analyses"
  },
  {
    icon: FaGlobeAfrica,
    title: "Sensibilisation",
    description: "Participez aux campagnes de sensibilisation"
  },
  {
    icon: FaFileAlt,
    title: "Recherche",
    description: "Contribuez à nos projets de recherche"
  }
];
---

<section class="py-20 bg-gradient-to-r from-farafina-primary to-farafina-secondary relative overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 z-0 overflow-hidden">
    <div class="absolute right-0 top-0 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
    <div class="absolute left-0 bottom-0 w-80 h-80 bg-white/10 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Participez à la Promotion de la Démocratie en Afrique
        </h2>
        <p class="text-white/90 text-lg mb-8">
          Rejoignez notre réseau d'observateurs, partagez vos données et contribuez à renforcer la transparence
          électorale à travers le continent.
        </p>

        <div class="grid grid-cols-2 gap-6 mb-8">
          {actions.map(action => (
            <div class="flex items-start">
              <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center mr-4 mt-1">
                <action.icon className="text-white" />
              </div>
              <div>
                <h3 class="font-semibold text-white mb-1">{action.title}</h3>
                <p class="text-white/80 text-sm">{action.description}</p>
              </div>
            </div>
          ))}
        </div>

        <div class="flex flex-wrap gap-4">
          <a
            href="/participate"
            class="px-6 py-3 bg-white text-farafina-primary font-medium rounded-lg hover:bg-white/90 transition-colors"
          >
            Rejoindre le Réseau
          </a>
          <a
            href="/contact"
            class="px-6 py-3 bg-transparent border border-white text-white font-medium rounded-lg hover:bg-white/10 transition-colors"
          >
            Nous Contacter
          </a>
        </div>
      </div>

      <div class="relative hidden lg:block">
        <img
          src="images/placeholder.svg"
          alt="Participation citoyenne"
          class="max-w-full h-auto rounded-lg shadow-xl"
        />
      </div>
    </div>
  </div>
</section>

