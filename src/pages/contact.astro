---
import MainLayout from '../layouts/MainLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.tsx';
---

<MainLayout title="Contact">
  <main class="flex-grow container-narrow py-8">
    <Breadcrumbs 
      items={[
        { label: 'Accueil', href: '/' },
        { label: 'Contact', href: '#' }
      ]} 
    />
    <div class="section-spacing">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Formulaire de contact -->
        <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 p-6 sm:p-8">
          <h1 class="text-3xl font-bold text-africa-primary mb-6">Contactez-nous</h1>
          
          <p class="text-gray-700 leading-relaxed mb-8">
            Pour toute question ou information complémentaire, n'hésitez pas à nous contacter via le formulaire ci-dessous ou en utilisant les coordonnées fournies.
          </p>

          <form 
            id="contact-form"
            class="space-y-6 animate-fade-in" 
            method="POST"
          >
            <div id="form-success" class="hidden text-green-700 font-bold text-center mb-4">Votre message a bien été envoyé !</div>
            <input type="hidden" name="_captcha" value="false">
            <input type="hidden" name="_next" value="/merci">

            <div>
              <label for="name" class="block text-sm font-semibold text-gray-700 mb-1">Nom complet</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                placeholder="Votre nom complet"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow focus:ring-2 focus:ring-africa-secondary focus:border-transparent transition"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-gray-700 mb-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder="votre@email.com"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow focus:ring-2 focus:ring-africa-secondary focus:border-transparent transition"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-semibold text-gray-700 mb-1">Sujet</label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                placeholder="Sujet de votre message"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow focus:ring-2 focus:ring-africa-secondary focus:border-transparent transition"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 mb-1">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                placeholder="Votre message..."
                class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow focus:ring-2 focus:ring-africa-secondary focus:border-transparent transition resize-none"
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-green-600 text-white py-4 px-6 rounded-lg font-bold text-lg shadow-lg hover:bg-green-700 transition-all duration-200"
            >
              Envoyer le message
            </button>
          </form>
        </div>

        <!-- Informations de contact -->
        <div class="bg-gray-50 border border-gray-200 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 sm:p-8 flex flex-col justify-between">
          <h2 class="text-2xl font-bold text-africa-primary mb-8 text-center">
            Autres moyens de contact
          </h2>
          <div class="space-y-8">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0 w-14 h-14 bg-green-100 rounded-full flex items-center justify-center shadow">
                <!-- Email icon modern -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H8m8 0a4 4 0 11-8 0 4 4 0 018 0zm0 0v4a4 4 0 01-8 0v-4" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Email</h3>
                <a 
                  href="mailto:info@africtivistes.org" 
                  class="text-green-700 hover:text-green-900 font-medium transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-2"
                >
                  info@africtivistes.org
                </a>
              </div>
            </div>
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0 w-14 h-14 bg-blue-100 rounded-full flex items-center justify-center shadow">
                <!-- Phone icon modern -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Téléphone</h3>
                <a 
                  href="tel:+221338375124" 
                  class="text-blue-700 hover:text-blue-900 font-medium transition-colors duration-200"
                >
                  (+221) 33 837 51 24
                </a>
              </div>
            </div>
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0 w-14 h-14 bg-yellow-100 rounded-full flex items-center justify-center shadow">
                <!-- Map/Location icon modern -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c1.104 0 2-.896 2-2s-.896-2-2-2-2 .896-2 2 .896 2 2 2zm0 0c-4.418 0-8 1.79-8 4v3h16v-3c0-2.21-3.582-4-8-4z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Adresse</h3>
                <p class="text-gray-700 font-medium">Liberté 6, Dakar, Sénégal</p>
              </div>
            </div>
          </div>
          <!-- Carte Google Maps -->
          <div class="mt-10 rounded-xl overflow-hidden shadow border border-gray-200">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3859.1234567890123!2d-17.456789!3d14.712345!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTTCsDQyJzQ0LjUiTiAxN8KwMjcnMjQuNCJX!5e0!3m2!1sfr!2ssn!4v1234567890!5m2!1sfr!2ssn" 
              width="100%" 
              height="220" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy"
              class="rounded-xl"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </main>
</MainLayout>

<script type="module">
  const form = document.getElementById('contact-form');
  const successMsg = document.getElementById('form-success');
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());
    try {
      const res = await fetch('/.netlify/functions/contact', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });
      if (res.ok) {
        form.reset();
        successMsg.classList.remove('hidden');
      } else {
        alert('Erreur lors de l\'envoi. Veuillez réessayer.');
      }
    } catch {
      alert('Erreur lors de l\'envoi. Veuillez réessayer.');
    }
  });
</script>
